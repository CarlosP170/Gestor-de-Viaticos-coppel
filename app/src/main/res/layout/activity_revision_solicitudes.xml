<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFBFC"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/teal_rounded_background"
            android:elevation="8dp"
            android:text="📋 Revisión de Solicitudes"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:letterSpacing="0.02" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/purple_button_background"
            android:elevation="6dp"
            android:gravity="center"
            android:text="⏳ Solicitudes pendientes:"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingVertical="14dp"
            android:letterSpacing="0.01" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/gray_id_background"
            android:elevation="4dp"
            android:lineSpacingExtra="6dp"
            android:text="💡 Da clic en la solicitud para acceder al administrador de solicitudes"
            android:textColor="#2C3E50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="20dp"
            android:gravity="center"
            android:letterSpacing="0.01" />

        <TextView
            android:id="@+id/buttonHistorialSolicitudes"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/gray_id_background"
            android:elevation="6dp"
            android:text="📚 Historial de Solicitudes"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:letterSpacing="0.02" />

        <TextView
            android:id="@+id/buttonRegresarMenu"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/purple_button_background"
            android:elevation="6dp"
            android:text="🔙 Regresar al menú principal"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:letterSpacing="0.02" />

    </LinearLayout>

</ScrollView>