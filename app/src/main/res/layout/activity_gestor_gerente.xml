<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8F4FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/white_title_background"
            android:elevation="6dp"
            android:gravity="center"
            android:text="Gestor/Administrador Gerente"
            android:textColor="#2C3E50"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/buttonGestorPersonal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/blue_button_background"
            android:elevation="4dp"
            android:gravity="center"
            android:text="Gestor Personal"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/buttonSolicitudViaticos"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/teal_rounded_background"
            android:elevation="4dp"
            android:gravity="center"
            android:text="Solicitud de viáticos"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/buttonSolicitudViaticosColaborador"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/green_button_background"
            android:elevation="4dp"
            android:gravity="center"
            android:text="Solicitud de viáticos para colaborador"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_info_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="28dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:lineSpacingExtra="4dp"
            android:text="• Compruebe que no haya dejado ningún proceso sin concluir"
            android:textColor="#2C3E50"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/buttonCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/button_red_background"
            android:clickable="true"
            android:elevation="6dp"
            android:focusable="true"
            android:gravity="center"
            android:text="Cerrar Sesión"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>