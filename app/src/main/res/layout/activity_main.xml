<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F4FD">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="120dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:id="@+id/cardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/white_input_background"
                android:elevation="12dp"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/white_input_background"
                    android:elevation="6dp"
                    android:padding="12dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewLogo"
                        android:layout_width="220dp"
                        android:layout_height="180dp"
                        android:contentDescription="@string/logo_description"
                        android:scaleType="fitCenter"
                        android:src="@drawable/logoprincipal" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="👋 Bienvenido"
                    android:textColor="#2C3E50"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:layout_gravity="center_horizontal"
                    android:text="🔐 Inicia sesión para continuar"
                    android:textColor="#64748B"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:letterSpacing="0.01" />

                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/white_input_background"
                    android:drawableStart="@android:drawable/ic_dialog_email"
                    android:drawablePadding="12dp"
                    android:elevation="2dp"
                    android:gravity="center_vertical"
                    android:hint="@string/email_hint"
                    android:inputType="textEmailAddress"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#2C3E50"
                    android:textColorHint="#95A5A6"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/white_input_background"
                    android:drawableStart="@android:drawable/ic_lock_idle_lock"
                    android:drawablePadding="12dp"
                    android:elevation="2dp"
                    android:gravity="center_vertical"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#2C3E50"
                    android:textColorHint="#95A5A6"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonLogin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/cylan_button_background"
                    android:elevation="4dp"
                    android:text="@string/login_button"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bottom_info_background"
        android:elevation="20dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:lineSpacingExtra="2dp"
            android:text="@string/info_text_1"
            android:textColor="#2C3E50"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:text="@string/info_text_2"
            android:textColor="#333333"
            android:textSize="18sp" />

    </LinearLayout>

</FrameLayout>