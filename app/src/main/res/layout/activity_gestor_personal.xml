<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F6FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/blue_button_background"
            android:elevation="8dp"
            android:gravity="center"
            android:text="👥 Gestor Personal"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />

        <TextView
            android:id="@+id/textViewEmployeeId"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/gray_id_background"
            android:elevation="6dp"
            android:gravity="center"
            android:text="90000000"
            android:textColor="#2C3E50"
            android:textSize="24sp"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <TextView
            android:id="@+id/textViewViaticosLabel"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/purple_button_background"
            android:elevation="6dp"
            android:gravity="center"
            android:text="🚀 Viáticos Programados:"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />

        <LinearLayout
            android:id="@+id/buttonFolioStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/large_gray_area"
            android:clickable="true"
            android:focusable="true"
            android:elevation="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/textFolioLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="🎫 Folio:"
                android:textColor="#1A365D"
                android:textSize="21sp"
                android:textStyle="bold"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/textEstadoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📋 Sin Viajes"
                android:textAlignment="center"
                android:textColor="#2C3E50"
                android:textSize="20sp"
                android:textStyle="bold"
                android:letterSpacing="0.01" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_info_background"
        android:elevation="12dp"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:lineSpacingExtra="8dp"
            android:text="⚠️ En caso de rechazo en la revisión de datos, tanto el colaborador como el gerente, deberá comunicarse a través de mesa de ayuda"
            android:textColor="#1A365D"
            android:textSize="16sp"
            android:letterSpacing="0.01" />

        <TextView
            android:id="@+id/buttonRegresarMenu"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/purple_button_background"
            android:clickable="true"
            android:elevation="8dp"
            android:focusable="true"
            android:gravity="center"
            android:text="🔙 Regresar al menú principal"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />

    </LinearLayout>

</LinearLayout>