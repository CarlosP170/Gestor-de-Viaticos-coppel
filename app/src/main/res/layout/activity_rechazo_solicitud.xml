<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFBFC"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/yellow_rounded_background"
            android:elevation="8dp"
            android:text="❌ ¿Por qué rechaza la solicitud?"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:letterSpacing="0.02" />

        <TextView
            android:id="@+id/textViewNumeroEmpleado"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/gray_id_background"
            android:elevation="6dp"
            android:gravity="center"
            android:text="90126701"
            android:textColor="#2C3E50"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <TextView
            android:id="@+id/textViewFolioViaje"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/gray_id_background"
            android:elevation="6dp"
            android:gravity="center"
            android:text="Folio del viaje"
            android:textColor="#2C3E50"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/purple_button_background"
            android:elevation="4dp"
            android:gravity="center"
            android:text="📋 Seleccione el motivo del rechazo"
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:letterSpacing="0.01" />

        <TextView
            android:id="@+id/buttonNumeroIncorrecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:background="@drawable/large_gray_area"
            android:elevation="6dp"
            android:text="Número de folio incorrecto o no existe"
            android:textColor="#2C3E50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp"
            android:minHeight="66dp"
            android:letterSpacing="0.01" />

        <TextView
            android:id="@+id/buttonColaboradorIncorrecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:background="@drawable/large_gray_area"
            android:elevation="6dp"
            android:text="Número de colaborador incorrecto o no corresponde"
            android:textColor="#2C3E50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp"
            android:minHeight="66dp"
            android:letterSpacing="0.01" />

        <TextView
            android:id="@+id/buttonMontosExcedentes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:background="@drawable/large_gray_area"
            android:elevation="6dp"
            android:text="Montos solicitados excedentes"
            android:textColor="#2C3E50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp"
            android:minHeight="66dp"
            android:letterSpacing="0.01" />

        <TextView
            android:id="@+id/buttonMontosInsuficientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:background="@drawable/large_gray_area"
            android:elevation="6dp"
            android:text="Montos solicitados insuficientes"
            android:textColor="#2C3E50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp"
            android:minHeight="66dp"
            android:letterSpacing="0.01" />

        <TextView
            android:id="@+id/buttonCategoriasIncorrectas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:background="@drawable/large_gray_area"
            android:elevation="6dp"
            android:text="Montos en categorías incorrectos o inválidos"
            android:textColor="#2C3E50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp"
            android:minHeight="66dp"
            android:letterSpacing="0.01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:orientation="vertical"
            android:background="@drawable/white_rounded_input"
            android:elevation="6dp"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✍️ Otro: Escriba la razón del rechazo"
                android:textColor="#2C3E50"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="14dp"
                android:letterSpacing="0.01" />

            <EditText
                android:id="@+id/editTextOtroMotivo"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="@drawable/white_input_background"
                android:gravity="top|start"
                android:hint="Escriba el motivo personalizado..."
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="4"
                android:padding="16dp"
                android:textColor="#2C3E50"
                android:textColorHint="#BDC3C7"
                android:textSize="17sp"
                android:elevation="2dp"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/buttonOtroMotivo"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/large_gray_area"
                android:elevation="4dp"
                android:text="📝 Seleccionar motivo personalizado"
                android:textColor="#2C3E50"
                android:textSize="17sp"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:letterSpacing="0.01" />

        </LinearLayout>

        <TextView
            android:id="@+id/buttonRechazarSolicitud"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_red_background"
            android:elevation="8dp"
            android:text="❌ Rechazar Solicitud"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:letterSpacing="0.02" />

        <TextView
            android:id="@+id/buttonRegresarMenu"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/purple_button_background"
            android:elevation="6dp"
            android:text="🔙 Regresar al menú anterior"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:letterSpacing="0.02" />

    </LinearLayout>

</ScrollView>