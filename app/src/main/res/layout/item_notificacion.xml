<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/gray_id_background"
    android:clickable="true"
    android:elevation="2dp"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/textTituloNotificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/indicadorNoLeida"
            android:text="Título de la notificación"
            android:textColor="#2C3E50"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/indicadorNoLeida"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/blue_button_background"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textMensajeNotificacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:lineSpacingExtra="2dp"
        android:text="Mensaje de la notificación"
        android:textColor="#34495E"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textFechaNotificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textColor="#7F8C8D"
        android:textSize="12sp" />

</LinearLayout>