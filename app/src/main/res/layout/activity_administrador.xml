<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFBFC"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/teal_rounded_background"
            android:elevation="10dp"
            android:text="📋 Revisión de Solicitudes"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="18dp"
            android:letterSpacing="0.02" />

        <TextView
            android:id="@+id/textViewNumeroEmpleado"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/gray_id_background"
            android:elevation="8dp"
            android:gravity="center"
            android:text="90126701"
            android:textColor="#2C3E50"
            android:textSize="24sp"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <TextView
            android:id="@+id/textViewFolioViaje"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/gray_id_background"
            android:elevation="8dp"
            android:gravity="center"
            android:text="📄 Folio del viaje"
            android:textColor="#2C3E50"
            android:textSize="21sp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/purple_button_background"
            android:elevation="6dp"
            android:gravity="center"
            android:text="💰 Montos solicitados por categoría"
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:letterSpacing="0.01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="26dp"
                android:src="@drawable/hotel" />

            <TextView
                android:id="@+id/textViewMontoHotel"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginEnd="22dp"
                android:layout_weight="1"
                android:background="@drawable/gray_id_background"
                android:elevation="6dp"
                android:gravity="center"
                android:text="$ 0"
                android:textColor="#2C3E50"
                android:textSize="20sp"
                android:textStyle="bold"
                android:letterSpacing="0.02" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="26dp"
                android:src="@drawable/comida" />

            <TextView
                android:id="@+id/textViewMontoComida"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginEnd="22dp"
                android:layout_weight="1"
                android:background="@drawable/gray_id_background"
                android:elevation="6dp"
                android:gravity="center"
                android:text="$ 0"
                android:textColor="#2C3E50"
                android:textSize="20sp"
                android:textStyle="bold"
                android:letterSpacing="0.02" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="26dp"
                android:src="@drawable/transporte" />

            <TextView
                android:id="@+id/textViewMontoTransporte"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginEnd="22dp"
                android:layout_weight="1"
                android:background="@drawable/gray_id_background"
                android:elevation="6dp"
                android:gravity="center"
                android:text="$ 0"
                android:textColor="#2C3E50"
                android:textSize="20sp"
                android:textStyle="bold"
                android:letterSpacing="0.02" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="26dp"
                android:src="@drawable/gasolina" />

            <TextView
                android:id="@+id/textViewMontoGasolina"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginEnd="22dp"
                android:layout_weight="1"
                android:background="@drawable/gray_id_background"
                android:elevation="6dp"
                android:gravity="center"
                android:text="$ 0"
                android:textColor="#2C3E50"
                android:textSize="20sp"
                android:textStyle="bold"
                android:letterSpacing="0.02" />

        </LinearLayout>

        <TextView
            android:id="@+id/buttonAutorizarSolicitud"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/green_button_background"
            android:elevation="10dp"
            android:text="✅ Autorizar Solicitud"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:letterSpacing="0.02" />

        <TextView
            android:id="@+id/buttonRechazarSolicitud"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/button_red_background"
            android:elevation="10dp"
            android:text="❌ Rechazar Solicitud"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:letterSpacing="0.02" />

        <TextView
            android:id="@+id/buttonRegresarMenu"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/purple_button_background"
            android:elevation="8dp"
            android:text="🔙 Regresar al menú anterior"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:letterSpacing="0.02" />

    </LinearLayout>

</ScrollView>