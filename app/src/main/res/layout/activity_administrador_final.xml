<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/blue_button_background"
            android:elevation="4dp"
            android:text="Administrador Final de Viajes"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="12dp" />

        <TextView
            android:id="@+id/textViewNumeroEmpleado"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/gray_id_background"
            android:elevation="4dp"
            android:gravity="center"
            android:text="90126701"
            android:textColor="#34495E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewFolioViaje"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/gray_id_background"
            android:elevation="4dp"
            android:gravity="center"
            android:text="Folio del viaje"
            android:textColor="#34495E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/purple_button_background"
            android:elevation="2dp"
            android:gravity="center"
            android:text="Resumen Autorizado vs Comprobado"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/hotel" />

            <TextView
                android:id="@+id/textViewMontoHotel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="@drawable/gray_id_background"
                android:elevation="2dp"
                android:gravity="center"
                android:text="Autorizado: $0.00\nGastos Comprobados: $0.00"
                android:textColor="#34495E"
                android:textSize="19sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:minHeight="60dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/comida" />

            <TextView
                android:id="@+id/textViewMontoComida"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="@drawable/gray_id_background"
                android:elevation="2dp"
                android:gravity="center"
                android:text="Autorizado: $0.00\nGastos Comprobados: $0.00"
                android:textColor="#34495E"
                android:textSize="19sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:minHeight="60dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/transporte" />

            <TextView
                android:id="@+id/textViewMontoTransporte"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="@drawable/gray_id_background"
                android:elevation="2dp"
                android:gravity="center"
                android:text="Autorizado: $0.00\nGastos Comprobados: $0.00"
                android:textColor="#34495E"
                android:textSize="19sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:minHeight="60dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/gasolina" />

            <TextView
                android:id="@+id/textViewMontoGasolina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="@drawable/gray_id_background"
                android:elevation="2dp"
                android:gravity="center"
                android:text="Autorizado: $0.00\nGastos Comprobados: $0.00"
                android:textColor="#34495E"
                android:textSize="19sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:minHeight="60dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/otros" />

            <TextView
                android:id="@+id/textViewMontoOtros"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="@drawable/gray_id_background"
                android:elevation="2dp"
                android:gravity="center"
                android:text="Sin Sobrantes"
                android:textColor="#34495E"
                android:textSize="19sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:minHeight="60dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/purple_button_background"
            android:elevation="2dp"
            android:gravity="center"
            android:text="Gestión de Sobrantes y Facturas"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagenFacturas"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/imagen"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground" />

            <TextView
                android:id="@+id/buttonFolioTicket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="@drawable/gray_id_background"
                android:elevation="2dp"
                android:gravity="center"
                android:text="No aplica folio de ticket"
                android:textColor="#34495E"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:minHeight="60dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            android:text="• Toca el ícono de imagen para revisar todas las facturas subidas"
            android:textColor="#2C3E50"
            android:textSize="20sp"
            android:lineSpacingExtra="4dp" />

        <TextView
            android:id="@+id/buttonFinalizarViaje"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/green_button_background"
            android:elevation="4dp"
            android:text="Finalizar Viaje"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/buttonRechazarRevision"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_red_background"
            android:elevation="4dp"
            android:text="Rechazar Revisión"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/buttonRegresarMenu"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/purple_button_background"
            android:elevation="4dp"
            android:text="Regresar al menu anterior"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</ScrollView>