<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFBFC"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/blue_button_background"
            android:elevation="8dp"
            android:text="📄 Subir Facturas"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:letterSpacing="0.02" />

        <FrameLayout
            android:id="@+id/buttonAreaArchivos"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/gray_rounded_background"
            android:elevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/textsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/textArrastrarArchivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📁 Arrastra o pega aquí tus facturas PDF o fotografía del ticket"
                        android:textColor="#2C3E50"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="14dp"
                        android:lineSpacingExtra="4dp"
                        android:letterSpacing="0.01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textSoloUnArchivo"
                        android:text="⚡ SOLO UN ARCHIVO A LA VEZ"
                        android:textColor="#E74C3C"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:letterSpacing="0.02" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageViewMiniatura"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:elevation="6dp"
                    android:visibility="gone" />

            </RelativeLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="18dp"
            android:background="@drawable/white_rounded_input"
            android:elevation="6dp"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💰 Ingresa el monto de la factura"
                android:textColor="#2C3E50"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_marginBottom="14dp"
                android:letterSpacing="0.01" />

            <EditText
                android:id="@+id/editTextMonto"
                android:layout_width="240dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:background="@drawable/white_rounded_input"
                android:elevation="4dp"
                android:gravity="center"
                android:hint="$ 0"
                android:inputType="numberDecimal"
                android:textColor="#2C3E50"
                android:textColorHint="#7F8C8D"
                android:textSize="20sp"
                android:textStyle="bold"
                android:letterSpacing="0.02" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/white_rounded_input"
            android:elevation="4dp"
            android:padding="16dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:src="@drawable/hotel"
                android:scaleType="centerInside" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:src="@drawable/comida"
                android:scaleType="centerInside" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:src="@drawable/transporte"
                android:scaleType="centerInside" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:src="@drawable/gasolina"
                android:scaleType="centerInside" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:src="@drawable/otros"
                android:scaleType="centerInside" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroupCategorias"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/white_rounded_input"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <RadioButton
                android:id="@+id/radioHotel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@android:drawable/btn_radio"
                android:drawablePadding="4dp"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/radioComida"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@android:drawable/btn_radio"
                android:drawablePadding="4dp"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/radioTransporte"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@android:drawable/btn_radio"
                android:drawablePadding="4dp"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/radioGasolina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@android:drawable/btn_radio"
                android:drawablePadding="4dp"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/radioOtros"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@android:drawable/btn_radio"
                android:drawablePadding="4dp"
                android:gravity="center" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📂 Selecciona la categoría a la cual corresponde la factura"
            android:textColor="#2C3E50"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:background="@drawable/gray_id_background"
            android:elevation="4dp"
            android:padding="18dp"
            android:gravity="center"
            android:letterSpacing="0.01" />

        <TextView
            android:id="@+id/buttonGuardarDatos"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/teal_rounded_background"
            android:elevation="8dp"
            android:text="💾 Guardar Datos"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:letterSpacing="0.02" />

        <TextView
            android:id="@+id/buttonEliminarModificar"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/green_rounded_background"
            android:clickable="true"
            android:elevation="6dp"
            android:focusable="true"
            android:gravity="center"
            android:text="🗂️ Eliminar/modificar factura"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />

        <TextView
            android:id="@+id/buttonRegresarMenu"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/purple_button_background"
            android:elevation="6dp"
            android:text="🔙 Regresar al menú anterior"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:letterSpacing="0.02" />

    </LinearLayout>

</ScrollView>